<Window x:Class="YamaHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YamaHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ÜST MENÜ -->
            <StackPanel Orientation="Horizontal" Background="#1e1e1e" Height="60">
                <TextBlock Text="YamaHub"
                   Foreground="White"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="20,15,40,0"/>

                <Button Content="Anasayfa" Margin="5"/>
                <Button Content="Yamalar" Margin="5"/>
                <Button Content="Yama Nasıl Kurulur" Margin="5"/>
                <Button Content="Giriş Yap" Margin="5"/>
                <Button Content="Üye Ol" Margin="5"/>
            </StackPanel>

            <!-- ORTA ALAN -->
            <Grid Grid.Row="1" Background="#2d2d2d">
                <ScrollViewer>
                    <WrapPanel Margin="20">

                        <Border Width="180" Height="260" Background="#1e1e1e" Margin="10" CornerRadius="8">
                            <StackPanel>
                                <Image Source="/Images/channels4_profile.jpg"
               Height="160"
               Stretch="Fill"/>

                                <TextBlock Text="Far Cry"
                   Foreground="White"
                   FontSize="14"
                   Margin="10,5,10,5"/>

                                <Button Content="Yamayı Kur"
        Margin="10"
        Height="30"
        Tag="FarCry"
        Click="YamayiKur_Click"/>


                            </StackPanel>
                        </Border>


                        <Border Width="180" Height="260" Background="#1e1e1e" Margin="10" CornerRadius="8">
                            <StackPanel>
                                <Rectangle Height="160" Fill="Gray"/>
                                <TextBlock Text="Örnek Oyun 2"
                           Foreground="White"
                           FontSize="14"
                           Margin="10,5,10,5"/>
                                <Button Content="Yamayı Kur"
                        Margin="10"
                        Height="30"/>
                            </StackPanel>
                        </Border>

                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

    </Grid>
</Window>
